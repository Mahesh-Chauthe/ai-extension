{
  "manifest_version": 3,
  "name": "Enterprise Security Extension",
  "version": "1.0.0",
  "description": "Advanced enterprise extension with sensitive data detection and organization management",
  "permissions": ["storage", "activeTab", "scripting", "background", "contextMenus", "notifications"],
  "host_permissions": ["http://localhost:3000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Enterprise Security"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
